name: Native CI
on:
  workflow_dispatch:
  schedule:
    - cron: '0 0 * * *'
permissions:
  contents: read
jobs:
  pipeline:
    name: <%= baseName %> native pipeline
    runs-on: ubuntu-latest
    if: "!contains(github.event.head_commit.message, '[ci skip]') && !contains(github.event.head_commit.message, '[skip ci]') && !contains(github.event.pull_request.title, '[skip ci]') && !contains(github.event.pull_request.title, '[ci skip]')"
    timeout-minutes: 40
    env:
      SPRING_OUTPUT_ANSI_ENABLED: DETECT
<%_ if (!databaseTypeNo && !skipServer ) { _%>
      SPRING_JPA_SHOW_SQL: false
<%_ } _%>
      JHI_DISABLE_WEBPACK_LOGS: true
<%_ if (clientFrameworkAngular) { _%>
      NG_CLI_ANALYTICS: false
<%_ } _%>
    steps:
      - uses: actions/checkout@v3
<%_ if (!skipClient) { _%>
      - uses: actions/setup-node@v3
        with:
          node-version: <%= NODE_VERSION %>
<%_ } _%>
      - name: 'SETUP: setup graalvm'
        uses: graalvm/setup-graalvm@v1
        with:
          version: 'latest'
          java-version: '<%= JAVA_VERSION %>'
          components: 'native-image'
          github-token: ${{ secrets.GITHUB_TOKEN }}
      - name: Install node.js packages
        run: <%= clientPackageManager %> install
      - name: 'E2E: Package'
        run: <%= clientPackageManager %> run native-package
<%_ if (cypressTests) { _%>
  <%_ const commented = applicationTypeGateway ? '# ' : ''; _%>
      <%= commented %>- name: 'E2E: Prepare'
      <%= commented %>  run: <%= clientPackageManager %> run ci:e2e:prepare
      <%= commented %>- name: 'E2E: Run'
      <%= commented %>  run: <%= clientPackageManager %> run native-e2e
<%_ } _%>
